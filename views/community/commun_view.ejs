<head>
    <link href="/css/community/commun_view.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.css" rel="stylesheet">
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js"></script>
    <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.8/summernote.css" rel="stylesheet">
    <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.8/summernote.js"></script>
  </head>
  
  <div class="community_wrapper">
    <div class="selection">
      <button class="select select1" type="button" value="1" onclick="changeColor(this)">
          <label>
            <span>고민상담소</span>
          </label>
        </button>
        <button class="select select2" type="button" value="2" onclick="changeColor(this)">
          <label>
            <span>정보 공유</span>
          </label>
        </button>
        
        <script>
        function changeColor(button) {
          const buttons = document.getElementsByClassName('select');
          for (let i = 0; i < buttons.length; i++) {
            buttons[i].classList.remove('write_active');
          }
          button.classList.add('write_active');
        }
        </script>
                      
    </div>
    <%-include ('./community-side.ejs'), { myPostResult: myPostResult} %>
    <div class="community_container">
        <div class="title"><h2> <%= communityResult[0].title %></h2></div>
        <div class="subinfo">
          <img class = "profile" src="/img/profile.png" alt="">
          <p class = "user"><%= communityResult[0].user_id %></p>
          <p class="time"> <%= communityResult[0].updated_at %></p>
        </div>
       
          
          <div class="view_wrapper">
            <%- communityResult[0].content %>
            
            
                
        
    </div>
    <button class="select select3" type="button" value="2">
    <label>
        <div>댓글</div>
      </label>
    </button>
    <script>
      var currentURL = window.location.href;

      // 가져온 현재 URL을 form의 action 속성에 할당
      document.getElementById("commentForm").action = currentURL;
      function submitComment() {
        // 댓글 입력 내용 가져오기
        var commentInput = document.getElementById("commentInput");
        var commentValue = commentInput.value.trim();
    
        // 댓글 내용이 비어있는지 확인
        if (commentValue === "") {
          alert("댓글 내용을 입력해주세요!");
        } else {
          // 댓글 폼 제출
          var commentForm = document.getElementById("commentForm");
          commentForm.submit();
        }
      }
    </script>
    <div class="comment_wrapper">
      <form action="" method="post" id="commentForm">
        <div class = "comment_input">
            <input id="commentInput" name="content" type="text" placeholder="댓글을 입력하세요" style="border: none;">
        </div>
        <input type="hidden" id="category_name" name="category_name" value="<%= communityResult[0].category_name %>">
        <input type="hidden" id="board_id" name="board_id" value="<%= communityResult[0].board_id %>">
        <button class="submit select select4" type="button" value="4" onclick="submitComment()">
            <label>
                <div>댓글 등록</div>
              </label>
        </button>
        <div class="comment"> 
          <% for (let i = 0; i < commentResult.length; i++) { %>
            <div class="comment">
                <div>                    
                    <div class="comment_content"><%= commentResult[i].content %></div>
                    <div class="writer_id"><%= commentResult[i].user_id %></div>
                </div>
            </div>
        <% } %>  
          <div>
            <div class="comment_content">댓글 내용이 들어갑니다</div>
            <div class="writer_id"> 작성자 ID </div>            
          </div>
        </div>
    </div>
    
    
  </div>
  
  